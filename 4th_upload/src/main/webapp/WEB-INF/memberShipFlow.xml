<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<!-- Executed when webFlow is triggered -->
	<on-start>
		<!-- demohandler is java class available through annotated Demohandler.java 
			class.here we are calling itâ€™s initFlow() method. -->
		<evaluate expression="demohandler.initFlow()" result="flowScope.register2" />
	</on-start>

	<!-- if not specified the first view state is the starting state -->
	<view-state id="start" view="register" model="flowScope.register2">
		<transition on="submit" to="validate" />
	</view-state>

	<action-state id="validate">
		<evaluate expression="demohandler.validateDetails(register2,messageContext)"></evaluate>

		<transition on="success" to="confirmDetails" />
		<transition on="failure" to="start" />
	</action-state>
	
	<view-state id="confirmDetails" view="confirmDetails" model="flowScope.register2">
		<transition on="edit" to="start" />
		<transition on="submit" to="dataBase" />
	</view-state>

	<action-state id="dataBase">
		<evaluate expression="demohandler.doregActions(register2)"></evaluate>
		<transition on="success" to="welcome" />
		<transition on="failure" to="start" />
	</action-state>



	<end-state id="welcome" view="welcome" />
	<end-state id="toException"
		view="externalRedirect:contextRelative:exception.jsp" />

	<!-- these events are available in every state -->
	<global-transitions>

		<transition on="error" to="toException" />
	</global-transitions>
</flow>